- if @current_user
  .container
    %h2.font-weight-bold
      = resource_class.model_name.human
      - if can? :admin, resource_class
        .float-right
          = link_to :admin, admin_anonymize_requests_path, class: 'btn btn-primary'
    %ul.list-group
      - if can? :create, resource_class
        = link_to t('.new'), new_anonymize_request_path, class: 'btn btn-primary'
      - @anonymize_requests.each do |p|
        %li.list-group-item.clearfix{class: p.state.in?(%w[denied canceled]) ? 'text-muted' : ''}
          .col-sm-8
            %h4
              = resource_class.model_name.human
              = l(p.created_at)
            %i= p.aasm.human_state
          .col-sm-4
            .btn-group.float-right
              - if p.try(:attachement_url)
                = link_to t('.anonymize'), p.attachement_url, class: 'btn btn-default'
              - if can? :cancel, p
                = link_to t('cancel'), cancel_anonymize_request_path(p), class: 'btn btn-danger', method: :post
- else
  .container.text-center
    %h2.font-weight-bold
      = resource_class.model_name.human
    %p.font-weight-bold
      = t('log-in')
